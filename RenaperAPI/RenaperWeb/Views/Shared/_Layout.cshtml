<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Renaper Consulta</title>

    @Styles.Render("~/Content/css")
    <link href="@Url.Content("~/Content/Renaper.css")" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body class="bg-slate-100 min-h-screen text-slate-800">

    <header class="bg-blue-900 text-white shadow-md">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center gap-3">
                <a href="@Url.Action("Index", "Renaper")" class="bg-white text-blue-900 p-2 rounded hover:bg-gray-100 transition">
                    <i class="fa-solid fa-id-card text-2xl"></i>
                </a>
                <div>
                    <h1 class="text-lg font-bold leading-tight">RENAPER</h1>
                    <p class="text-xs text-blue-200">Portal de Consultas Ciudadanas</p>
                </div>
            </div>
        </div>
    </header>

    <main class="container mx-auto mt-8 px-4 max-w-3xl">
        @RenderBody()
    </main>

    <footer class="text-center text-slate-400 text-sm py-6">
        <p>&copy; @DateTime.Now.Year - Renaper Proyecto</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>