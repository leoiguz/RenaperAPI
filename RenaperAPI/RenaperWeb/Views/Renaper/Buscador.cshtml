@if (Model != null)
{
    <section id="vista-resultado" class="bg-white rounded-lg shadow-lg overflow-hidden fade-in border-t-4 border-blue-600 mt-8">
        <div class="p-6 md:p-10">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h2 class="text-2xl font-bold text-slate-800">Identidad Validada</h2>
                    <p class="text-green-600 font-bold text-sm flex items-center gap-1">
                        <i class="fa-solid fa-check-circle"></i> Datos encontrados en RENAPER
                    </p>
                </div>
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/ff/Coat_of_arms_of_Argentina.svg"
                     alt="Escudo Argentina"
                     class="h-12 opacity-80">
            </div>

            <div class="bg-slate-50 rounded-xl p-6 border border-slate-200 flex flex-col md:flex-row gap-8">

                <div class="flex-shrink-0 flex flex-col items-center">
                    <div class="w-32 h-32 bg-gray-300 rounded-full overflow-hidden border-4 border-white shadow-md">
                        <img src="https://randomuser.me/api/portraits/lego/1.jpg" alt="Foto Persona" class="w-full h-full object-cover opacity-80">
                    </div>
                    <span class="mt-2 bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">ID VERIFICADO</span>
                </div>

                <div class="flex-grow grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8">
                    <div>
                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">Documento Nacional de Identidad</label>
                        <p class="text-xl font-mono font-bold text-slate-900">@Model.DNI</p>
                    </div>

                    <div>
                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">CUIL / CUIT (Ref)</label>
                        <p class="text-lg text-slate-800">20-@Model.DNI-X</p>
                    </div>

                    <div class="md:col-span-2">
                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">Apellido y Nombres</label>
                        <p class="text-lg font-bold text-slate-800 uppercase">@Model.Apellido, @Model.Nombres</p>
                    </div>

                    <div class="md:col-span-2">
                        <label class="text-xs font-bold text-slate-400 uppercase tracking-wider">Provincia / Distrito</label>
                        <p class="text-lg text-slate-800">@Model.Provincia</p>
                    </div>
                </div>
            </div>

            <div class="mt-6 text-center">
                <a href="@Url.Action("Index")" class="text-blue-600 hover:text-blue-800 font-semibold text-sm hover:underline">
                    Realizar nueva consulta
                </a>
            </div>
        </div>
    </section>
}