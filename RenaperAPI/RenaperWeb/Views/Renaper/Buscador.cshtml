@{
    ViewBag.Title = "Nueva Consulta";
}

<section class="bg-white rounded-lg shadow-sm border border-slate-200 p-8 fade-in mb-8 max-w-3xl mx-auto mt-10">
    <h2 class="text-2xl font-bold text-slate-700 mb-2">Iniciar Trámite de Consulta</h2>
    <p class="text-slate-500 mb-6">Ingrese el DNI de la persona física para verificar existencia y generar orden de pago.</p>

    <form action="@Url.Action("Buscador")" method="get">
        <div class="flex flex-col md:flex-row gap-4 items-end">
            <div class="w-full">
                <label for="dniBuscado" class="block text-sm font-bold text-slate-700 mb-2">Número de Documento</label>
                <input type="number" name="dniBuscado" class="w-full p-3 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500 focus:outline-none text-lg" placeholder="Ej: 35123456" required />
            </div>
            <button type="submit" class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded transition shadow-lg flex justify-center items-center gap-2 whitespace-nowrap">
                Generar Cupón
                <i class="fa-solid fa-chevron-right"></i>
            </button>
        </div>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="mt-4 p-4 bg-red-50 border-l-4 border-red-500 text-red-700 fade-in">
            <p class="font-bold"><i class="fa-solid fa-circle-exclamation mr-2"></i>Error</p>
            <p>@ViewBag.Error</p>
        </div>
    }
</section>