@model IEnumerable<RenaperWeb.Models.PersonaViewModel>

@{
    ViewBag.Title = "Base de Datos";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-end mb-6 fade-in">
        <div>
            <h2 class="text-2xl font-bold text-slate-800">Base de Datos RENAPER</h2>
            <p class="text-slate-500 text-sm">Listado completo de ciudadanos registrados.</p>
        </div>
        <a href="@Url.Action("Index")" class="text-slate-500 hover:text-blue-600 text-sm font-semibold">
            <i class="fa-solid fa-arrow-left mr-1"></i> Volver
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg border border-slate-200 overflow-hidden fade-in">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead class="bg-slate-100 border-b border-slate-200">
                    <tr>
                        <th class="py-4 px-6 text-xs font-bold uppercase text-slate-500 tracking-wider">DNI</th>
                        <th class="py-4 px-6 text-xs font-bold uppercase text-slate-500 tracking-wider">Apellido</th>
                        <th class="py-4 px-6 text-xs font-bold uppercase text-slate-500 tracking-wider">Nombres</th>
                        <th class="py-4 px-6 text-xs font-bold uppercase text-slate-500 tracking-wider">Provincia</th>
                        <th class="py-4 px-6 text-xs font-bold uppercase text-slate-500 tracking-wider text-right">Acciones</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-blue-50 transition group">
                            <td class="py-4 px-6 font-mono font-bold text-slate-700">@item.DNI</td>
                            <td class="py-4 px-6 font-semibold text-slate-800">@item.Apellido</td>
                            <td class="py-4 px-6 text-slate-600">@item.Nombres</td>
                            <td class="py-4 px-6">
                                <span class="bg-slate-100 text-slate-600 py-1 px-3 rounded-full text-xs font-bold border border-slate-200">
                                    @item.Provincia
                                </span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <a href="@Url.Action("Buscador", new { dniBuscado = item.DNI })"
                                   class="text-blue-600 hover:text-blue-800 font-bold text-xs hover:underline bg-blue-50 hover:bg-blue-100 py-2 px-3 rounded transition">
                                    <i class="fa-solid fa-eye mr-1"></i> Ver Ficha
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="p-8 text-center text-slate-400">
                <i class="fa-solid fa-folder-open text-4xl mb-3 opacity-50"></i>
                <p>No hay registros disponibles en la API.</p>
            </div>
        }
    </div>

    <div class="mt-4 text-right text-xs text-slate-400">
        Registros totales: @Model.Count()
    </div>
</div>