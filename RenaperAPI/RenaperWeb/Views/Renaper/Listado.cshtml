@model IEnumerable<RenaperWeb.Models.PersonaViewModel>

@{
    ViewBag.Title = "Consulta RENAPER";
}

<h2>Base de Datos RENAPER (Simulación)</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombres</th>
            <th>Provincia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DNI</td>
                <td>@item.Apellido</td>
                <td>@item.Nombres</td>
                <td>@item.Provincia</td>
            </tr>
        }
    </tbody>
</table>