@{
    ViewBag.Title = "Inicio";
}



<section class="max-w-2xl mx-auto text-center mb-10 mt-6">
    <h2 class="text-3xl font-bold text-blue-900 mb-2">Bienvenido al Sistema Renaper</h2>
    <p class="text-slate-500">Seleccione una operación para comenzar.</p>
</section>

<section class="bg-white rounded-xl shadow-lg border border-slate-200 p-8 fade-in mb-8 relative overflow-hidden">
    <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-blue-50 rounded-full blur-2xl opacity-50"></div>

    <h3 class="text-xl font-bold text-slate-700 mb-4 flex items-center gap-2">
        <i class="fa-solid fa-magnifying-glass text-blue-600"></i>
        Consulta Ciudadana
    </h3>

    <p class="text-slate-500 mb-6 text-sm">Ingrese el DNI para validar identidad y ver datos del padrón.</p>

    <form action="@Url.Action("Buscador")" method="get">
        <div class="flex flex-col sm:flex-row gap-3">
            <input type="number"
                   name="dniBuscado"
                   class="flex-grow p-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none transition"
                   placeholder="Ingrese DNI aquí..."
                   required />

            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition shadow-md flex items-center justify-center gap-2">
                Consultar
                <i class="fa-solid fa-arrow-right"></i>
            </button>
        </div>
    </form>
</section>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <a href="@Url.Action("Listado")" class="group block bg-white p-6 rounded-xl shadow-sm border border-slate-200 hover:border-blue-400 transition cursor-pointer">
        <div class="flex items-center gap-4">
            <div class="bg-blue-100 text-blue-700 w-12 h-12 rounded-full flex items-center justify-center text-xl group-hover:scale-110 transition">
                <i class="fa-solid fa-list"></i>
            </div>
            <div>
                <h4 class="font-bold text-slate-800 group-hover:text-blue-700">Ver Padrón Completo</h4>
                <p class="text-xs text-slate-500">Listado de todas las personas registradas.</p>
            </div>
        </div>
    </a>

    <div class="bg-slate-50 p-6 rounded-xl border border-slate-200 opacity-75">
        <div class="flex items-center gap-4">
            <div class="bg-slate-200 text-slate-500 w-12 h-12 rounded-full flex items-center justify-center text-xl">
                <i class="fa-solid fa-gear"></i>
            </div>
            <div>
                <h4 class="font-bold text-slate-600">Configuración</h4>
                <p class="text-xs text-slate-400">Solo administradores (Próximamente)</p>
            </div>
        </div>
    </div>
</div>