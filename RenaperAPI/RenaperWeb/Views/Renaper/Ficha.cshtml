@model RenaperWeb.Models.PersonaViewModel
@{
    ViewBag.Title = "Ficha de Persona";
}

<div class="max-w-4xl mx-auto mt-6 fade-in">
    <div class="bg-green-100 border-l-4 border-green-500 p-4 mb-6 rounded-r flex items-center gap-3">
        <i class="fa-solid fa-circle-check text-green-600 text-xl"></i>
        <div>
            <h3 class="font-bold text-green-800">Pago Aprobado</h3>
            <p class="text-sm text-green-700">Se han desbloqueado los datos del ciudadano.</p>
        </div>
    </div>

    <section class="bg-white rounded-lg shadow-lg overflow-hidden border-t-4 border-blue-600">
        <div class="p-6 md:p-10">
            <div class="flex justify-between items-start mb-8">
                <h2 class="text-2xl font-bold text-slate-800">Ficha Personal RENAPER</h2>
                <img src="https://upload.wikimedia.org/wikipedia/commons/f/ff/Coat_of_arms_of_Argentina.svg" alt="Escudo" class="h-12 opacity-80">
            </div>

            <div class="bg-slate-50 rounded-xl p-8 border border-slate-200 flex flex-col md:flex-row gap-10">
                <div class="flex-shrink-0 flex flex-col items-center">
                    <div class="w-40 h-40 bg-gray-300 rounded-full overflow-hidden border-4 border-white shadow-md">
                        <img src="https://randomuser.me/api/portraits/lego/1.jpg" alt="Foto" class="w-full h-full object-cover">
                    </div>
                    <span class="mt-3 bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded-full uppercase">Identidad Validada</span>
                </div>

                <div class="flex-grow grid grid-cols-1 md:grid-cols-2 gap-y-6 gap-x-8">
                    <div>
                        <label class="text-xs font-bold text-slate-400 uppercase">Documento</label>
                        <p class="text-2xl font-mono font-bold text-slate-900">@Model.DNI</p>
                    </div>
                    <div>
                        <label class="text-xs font-bold text-slate-400 uppercase">CUIL / CUIT</label>
                        <p class="text-xl text-slate-700">20-@Model.DNI-X</p>
                    </div>
                    <div class="md:col-span-2">
                        <label class="text-xs font-bold text-slate-400 uppercase">Apellido y Nombres</label>
                        <p class="text-xl font-bold text-slate-800 uppercase border-b border-slate-200 pb-2">@Model.Apellido, @Model.Nombres</p>
                    </div>
                    <div class="md:col-span-2">
                        <label class="text-xs font-bold text-slate-400 uppercase">Provincia</label>
                        <p class="text-lg text-slate-800"><i class="fa-solid fa-location-dot text-red-500 mr-1"></i> @Model.Provincia</p>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex justify-center">
                <a href="@Url.Action("Index")" class="bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold py-2 px-6 rounded transition">
                    <i class="fa-solid fa-house mr-2"></i> Volver al Inicio
                </a>
            </div>
        </div>
    </section>
</div>